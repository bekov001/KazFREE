@model ExampleNET.Forms.RegisterModelView

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<a asp-action="Login" asp-controller="Profile">Есть аккаунт?</a>


<main class="text-center">
    <form class="form-signin" asp-action="Register" asp-controller="Profile" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Добро пожаловать снова!</h1>


        <label for="inputEmail" class="sr-only">Электронная почта</label>
        <input type="email" class="form-control" placeholder="Электронная почта" required="" autofocus="" asp-for="Email">
        <span asp-validation-for="Email" />

        <label for="inputPassword" class="sr-only">Пароль</label>
        <input type="password" class="form-control mt-3" placeholder="Password" required="" asp-for="Password">
        <span asp-validation-for="Password" />

        <label for="inputPassword" class="sr-only">Повторите пароль</label>
        <input type="password" class="form-control mt-3" placeholder="Password" required="" asp-for="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" />

        <input type="submit" value="Зарегистроваться" class="btn btn-primary btn-block" />
        <p class="mt-5 mb-3 text-muted">© 2017-2018</p>
    </form>

    <a asp-controller="Profile" asp-action="Register">Нет аккаунта?</a>
</main>